<!DOCTYPE html>

<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  </head>
  <body>
  <div class="container mt-5" id="tabela">
    <table class="table table-striped">
      <thead class="bg-dark text-white">
      <tr>
        <th>ID</th>
        <th>ID radnika</th>
        <th>ID projekta</th>
        <th>Datum</th>
        <th>Broj radnih sati</th>
        <th>ID zadatka</th>
      </tr>
      </thead>
      <tbody id="tabelaSati">
      <% for (let i = 0; i < satiData.length; i++) { %>
        <tr id="red<%= satiData[i].id %>">
          <td><%= satiData[i].id %></td>
          <td id="idradnika<%= satiData[i].id %>"><%= satiData[i].id_radnika %></td>
          <td id="idprojekta<%= satiData[i].id %>"><%= satiData[i].id_projekta %></td>
          <td id="datum<%= satiData[i].id %>"><%= satiData[i].datum.toLocaleDateString('hr-HR') %></td>
          <td id="brojsati<%= satiData[i].id%>"><%= satiData[i].broj_sati %></td>
          <td id="idzadatka<%= satiData[i].id%>"><%= satiData[i].id_zadatka %></td>
        </tr>
      <% } %>
      </tbody>
    </table>
  </div>

  </body>
</html>
